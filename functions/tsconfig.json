{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "lib": [
      "es2017",
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "jsx": "react",
    "strictPropertyInitialization": false
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./lib/*"
  ]
}
